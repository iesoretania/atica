{% extends "layout.html.twig" %}

{% block maincontent %}
<div class="panel panel-info">
    <div class="panel-heading">
        <h1>Listado de personal</h1>
    </div>
    <div class="panel-body">
        <a href="{{ urlFor('personlist', { 'sort': 0, 'filter': 1-filter } ) }}" class="btn btn-info pull-right">{{ filter ? 'Mostrar todos los usuarios' : 'Mostrar sólo los usuarios activos' }}</a>
    </div>
    <form>
        <table class="table table-striped table-condensed table-hover">
            <thead>
                <tr>
                    <th class="col-md-2"><input type="checkbox"> <a href="{{ urlFor('personlist', { 'sort': 0, 'filter': filter } ) }}">Usuario</a></th>
                    <th class="col-md-7"><a href="{{ urlFor('personlist', { 'sort': 1, 'filter': filter } ) }}">Nombre</a></th>
                    <th class="hidden-xs hidden-sm col-md-2"><a href="{{ urlFor('personlist', { 'sort': 2, 'filter': filter } ) }}">Correo-e</a></th>
                    <th class="col-md-1"><a href="{{ urlFor('personlist', { 'sort': 3, 'filter': filter } ) }}">Últ. conexión</a></th>
                </tr>
            </thead>
            <tbody>
                {% for person in persons %}
                {% set link = urlFor('personal', { 'id': person['id'], 'section': 0 }) %}
                {% set gender = ['', 'male', 'female'][person['gender']] %}
                <tr>
                    <td><input type="checkbox" name="user{{ person['id'] }}">
                        <a href="{{ link }}">{{ person['user_name'] }}</a>
                        {% if not person['is_active'] %}
                            <span class="icon-eye-close"></span>
                        {% elseif person['is_local_administrator'] or person['is_global_administrator'] %}
                            <span class="icon-cog"></span>
                        {% endif %}
                    </td>
                    <td class="visible-xs">
                        <a href="{{ link }}">{{ person['display_name'] }}</a>
                        {% if gender %}<span class="icon-{{gender}}"></span>{% endif %}
                    </td>
                    <td class="hidden-xs">
                        <a href="{{ link }}">{{ person['first_name'] ~ ' ' ~ person['last_name'] }}</a>
                        {% if gender %}<span class="icon-{{gender}}"></span>{% endif %}
                    </td>
                    <td class="hidden-xs hidden-sm">{{ person['email'] }}</td>
                    <td>{{ person['last_login'] ? (person['last_login'] | date('Y/m/d')) : '---' }}</td>
                </tr>
                </a>
                {% endfor %}
            </tbody>
        </table>
        <div class="panel-footer">
            <p><strong>Con los elementos seleccionados:</strong></p>
            <button type="submit" name="enable" class="btn btn-info">Activar usuarios</button>
            <button type="submit" name="disable" class="btn btn-warning">Desactivar usuarios</button>
            {% if user['is_global_administrator'] %}
            <button type="submit" name="delete" class="btn btn-danger">Eliminar usuarios</button>
            {% endif %}
        </div>
    </form>
</div>
{% endblock %}