{% extends "base.html.twig" %}

{% block navbar %}
{% endblock %}
            
{% block content %}
        <div class="panel panel-primary atica-panel-login">
            <div class="panel-body">
                <form method="post" action="{{ urlFor('organization') }}">
                    <fieldset>
                        <legend>Seleccione el centro al que desea acceder</legend>
                        {% for org in organizations %}
                        <div class="radio">
                            <label>
                                <input type="radio" name="organization_id" id="org{{ loop.n }}" value="{{ org.id }}" {% if org.id == organization.id %}checked autofocus="true"{% endif %}>
                                <strong>{{ org.display_name }}</strong>{% if org.additional_info %} &mdash; {{ org.additional_info }}{% endif %}{% if org['logo'] %}&nbsp;<img src="{{org['logo']}}" width="16" height="16"></img>{% endif %}
                            </label>
                        </div>
                        {% endfor %}
                        <button type="submit" class="btn btn-primary btn-block">Seleccionar centro</button>
                    </fieldset>
                </form>
            </div>
            <div class="panel-footer text-muted text-center thin">{{ config['login.help'] }}</div>
        </div>
{% endblock %}