{% extends "menu.html.twig" %}
            
{% block content %}
            {% if flash['home_info'] %}
            <div class="alert alert-info">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                {% if flash['home_info'] == 'logout' %}
                <strong>La salida se ha realizado con éxito.</strong> Puede volver a entrar <a href="{{ urlFor('organizacion') }}" class="alert-link">desde este enlace</a>.
                {% elseif flash['home_info'] == 'no organization' %}

                {% else %}
                <strong>{{ flash['home_info_summary'] }}</strong> {{ flash['home_info_detail'] }}
                {% endif %}
            </div>
            {% endif %}
{% endblock %}